<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/view_codes_display_margin"
                xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/cods_display_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/view_codes_display_padding"
        android:textSize="@dimen/cods_display_name_font_size"
        android:textStyle="bold"
        android:text="@string/codes_display_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/code_number_text_view"
        android:layout_width="@dimen/code_number_text_view_width"
        android:layout_height="@dimen/code_number_text_view_height"
        android:background="@drawable/background_with_thin_borders"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/code_number_font_size"
        android:textStyle="bold"
        tools:text="@string/code_number_example"
        android:layout_below="@+id/cods_display_name_text_view"
        android:layout_alignParentStart="true"/>

</RelativeLayout>