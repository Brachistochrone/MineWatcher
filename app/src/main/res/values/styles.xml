<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorCorumGray</item>
        <item name="colorPrimaryDark">@color/colorCorumDarkGray</item>
        <item name="colorAccent">@color/colorCorumOrange</item>
        <item name="android:textColorPrimary">@color/colorCorumGray</item>
        <item name="android:textColorSecondary">@color/colorCorumGray</item>
        <item name="android:textColorTertiary">@color/colorCorumGray</item>
        <item name="android:colorBackground">@color/colorWhite</item>
    </style>

    <style name="DialogConnection" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/colorCorumLightGray</item>
        <item name="colorPrimaryDark">@color/colorCorumGray</item>
        <item name="colorAccent">@color/colorCorumOrange</item>
        <item name="android:textColorPrimary">@color/colorCorumLightGray</item>
        <item name="android:textColorSecondary">@color/colorCorumLightGray</item>
        <item name="android:textColorTertiary">@color/colorCorumLightGray</item>
        <item name="android:colorBackground">@color/colorCorumGray</item>
        <item name="android:textColorHint">@color/colorCorumLightGrayHint</item>
    </style>

    <style name="VerticalDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorCorumLightGrayHint</item>
    </style>

</resources>
