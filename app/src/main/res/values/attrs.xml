<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <declare-styleable name="MotorCurrentAndTemperatureView">

        <attr name="mctv_headerText" format="string"/>
        <attr name="mctv_currentText" format="string"/>
        <attr name="mctv_temperatureText" format="string"/>

        <attr name="mctv_headerTextColor" format="color"/>
        <attr name="mctv_textColor" format="color"/>

        <attr name="mctv_headerTextSize" format="dimension"/>
        <attr name="mctv_currentTextSize" format="dimension"/>
        <attr name="mctv_temperatureTextSize" format="dimension"/>

        <attr name="mctv_backgroundColor" format="color"/>

        <attr name="mctv_currentBarColor" format="reference"/>
        <attr name="mctv_temperatureBarColor" format="reference"/>

        <attr name="mctv_boundaryColor" format="color"/>

        <attr name="mctv_maxCurrent" format="integer"/>
        <attr name="mctv_maxTemperature" format="integer"/>

        <attr name="mctv_drawBackground" format="boolean"/>

