        <attr name="ifv_textColor" format="color"/>

        <attr name="ifv_headerTextSize" format="dimension"/>
        <attr name="ifv_subHeaderTextSize" format="dimension"/>
        <attr name="ifv_frequencyTextSize" format="dimension"/>
        <attr name="ifv_bottomLineTextSize" format="dimension"/>

        <attr name="ifv_backgroundColor" format="color"/>

        <attr name="ifv_givenFrequencyBarColor" format="reference"/>
        <attr name="ifv_actualFrequencyBarColor" format="reference"/>

        <attr name="ifv_boundaryColor" format="color"/>

        <attr name="ifv_maxFrequency" format="integer"/>

        <attr name="ifv_drawBackground" format="boolean"/>

    </declare-styleable>

    <declare-styleable name="MotorThermometersView">

        <attr name="mtv_headerText" format="string"/>
        <attr name="mtv_statorTemperatureText" format="string"/>
        <attr name="mtv_bearingNTemperatureText" format="string"/>
        <attr name="mtv_bearingPTemperatureText" format="string"/>
        <attr name="mtv_gearcaseTemperatureText" format="string"/>
        <attr name="mtv_statorTemperatureBottomText" format="string"/>
