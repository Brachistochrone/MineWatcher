        <attr name="mtv_headerTextSize" format="dimension"/>
        <attr name="mtv_temperatureTextSize" format="dimension"/>
        <attr name="mtv_bottomLineTextSize" format="dimension"/>

        <attr name="mtv_backgroundColor" format="color"/>

        <attr name="mtv_temperatureBarColor" format="reference"/>

        <attr name="mtv_thermometerImage" format="reference"/>

        <attr name="mtv_boundaryColor" format="color"/>

        <attr name="mtv_statorMaxTemperature" format="integer"/>
        <attr name="mtv_bearingMaxTemperature" format="integer"/>
